---
import Layout from "../../layouts/Layout.astro";
import DocsWrapper from "../../components/docs/DocsWrapper.astro";
import DocsSidebar from "../../components/docs/DocsSidebar.astro";
import DocsContentWrapper from "../../components/docs/DocsContentWrapper.astro";
import DocsSection from "../../components/docs/DocsSection.astro";
import DocsHeader from "../../components/docs/DocsHeader.astro";
import CodeBlock from "../../components/CodeBlock.astro";
---

<Layout
  title="Getting Started - Gland Framework"
  description="Start building with Gland's event-driven framework. Learn core concepts, setup your first project, and explore advanced features"
>
  <DocsWrapper>
    <DocsSidebar />

    <DocsContentWrapper>
      <DocsHeader title="Getting Started with Gland">
        <p class="lead">Start building event-driven applications in minutes</p>
      </DocsHeader>

      <DocsSection>
        <h2 class="section-title">
          <span class="title-icon">üéØ</span>
          Why Gland?
        </h2>

        <div class="prose">
          <p>
            Gland reimagines server-side development with its unique event-first
            architecture:
          </p>
          <ul class="feature-list">
            <li>‚ö°Ô∏è Built for real-time applications</li>
            <li>üîó Protocol-agnostic design</li>
            <li>üß© Modular and extensible</li>
            <li>üöÄ Optimized for scale</li>
          </ul>
        </div>
      </DocsSection>

      <DocsSection>
        <h2 class="section-title">
          <span class="title-icon">‚ö°</span>
          Quick Start
        </h2>

        <div class="prose">
          <h3>Prerequisites</h3>
          <ul>
            <li>Node.js 18+</li>
            <li>npm 9+ or pnpm</li>
            <li>TypeScript 5+ (recommended)</li>
          </ul>

          <h3>Create a New Project</h3>
          <CodeBlock lang="bash">
            {
              `
            # Create new directory
            mkdir my-gland-app
            cd my-gland-app

            # Initialize project
            npm init -y

            # Install dependencies
            npm install @gland/core
            `
            }
          </CodeBlock>

          <h3>First Application</h3>
          <CodeBlock lang="typescript" filename="src/app.ts" lineNumbers>
            {
              `
            import { GlandFactory } from '@gland/core';
            import { UserController, UserChannel } from './users';

            @Module({
              controllers: [UserController],
              channels: [UserChannel]
            })
            class AppModule {}
            // Bootstrap application
            const app = GlandFactory.create(AppModule);
            app.listen(3000);
            `
            }
          </CodeBlock>
        </div>
      </DocsSection>

      <DocsSection>
        <h2 class="section-title">
          <span class="title-icon">üîó</span>
          Next Steps
        </h2>

        <div class="next-steps">
          <a href="/docs/architecture" class="step-card">
            <h3>Architecture Guide ‚Üí</h3>
            <p>Understand Gland's core architecture and event flow</p>
          </a>

          <a href="/docs/events" class="step-card">
            <h3>Event System ‚Üí</h3>
            <p>Master event handling and cross-channel communication</p>
          </a>

          <a href="/examples" class="step-card">
            <h3>Examples ‚Üí</h3>
            <p>Explore real-world use cases and code samples</p>
          </a>
        </div>
      </DocsSection>
    </DocsContentWrapper>
  </DocsWrapper>
</Layout>
