---
const navItems = [
  { name: "Home", href: "/docs/" },
  { name: "Overview", href: "/docs/overview" },
  { name: "Examples", href: "/docs/examples" },
  { name: "GitHub", href: "https://github.com/glandjs/gland", external: true },
];
---

<header class="header">
  <div class="container flex items-center justify-between h-16">
    <a href={navItems[0].href} class="flex items-center gap-2 font-semibold">
      <span class="bg-gradient-to-r from-[#646cff] to-[#bc52ee] bg-clip-text text-transparent">
        Gland
      </span>
      <span class="logo-badge">ALPHA</span>
    </a>

     <button class="mobile-menu-button md:hidden">
      <span class="menu-icon"></span>
    </button>

    <nav class="hidden md:flex items-center gap-6">
      <ul class="flex items-center gap-4">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="nav-link"
              {...(item.external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
            >
              {item.name}
              {item.external && (
                <span class="text-xs opacity-70" aria-hidden="true">â†—</span>
              )}
            </a>
          </li>
        ))}
      </ul>

         <button class="theme-button">
           <span class="sun-icon block dark:hidden">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
              <path d="M12 16a4 4 0 1 0 0-8 4 4 0 0 0 0 8z" class="sun-circle"
              ></path>
              <path
                d="M12 3v1m0 16v1m-9-9h1m16 0h1m-2.636-6.364l-.707.707M6.343 17.657l-.707.707M16.364 6.364l-.707-.707M6.343 6.343l-.707-.707"
                class="sun-rays"
                stroke-width="2"
                stroke-linecap="round"></path>
            </svg>
          </span>
          <span class="moon-icon hidden dark:block">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
              <path
                d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
                class="moon-body"
                stroke-width="2"
                stroke-linecap="round"></path>
            </svg>
          </span>
        </button>
    </nav>
  </div>
</header>
