---
const footerLinks = [
  {
    title: "Resources",
    links: [
      { name: "Documentation", href: "/docs" },
      { name: "GitHub", href: "https://github.com/glandjs/gland", external: true },
      { name: "Examples", href: "/examples" },
      { name: "Releases", href: "https://github.com/glandjs/gland/releases", external: true }
    ]
  },
  {
    title: "Community",
    links: [
      { name: "Discord", href: "https://discord.gg/nSMaEXkMUz", external: true },
      { name: "Twitter", href: "https://twitter.com/m__mdy__m", external: true },
      { name: "Contribute", href: "/contribute" },
      { name: "Feedback", href: "https://github.com/glandjs/gland/discussions", external: true }
    ]
  },
  {
    title: "Legal",
    links: [
      { name: "License", href: "/license" },
      { name: "Code of Conduct", href: "/code-of-conduct" },
      { name: "Privacy Policy", href: "/privacy" },
      { name: "Terms of Use", href: "/terms" }
    ]
  }
];

const socialLinks = [
  { name: "GitHub", href: "https://github.com/glandjs/gland", icon: "github" },
  { name: "Twitter", href: "https://twitter.com/m__mdy__m", icon: "twitter" },
  { name: "Discord", href: "https://discord.gg/nSMaEXkMUz", icon: "discord" }
];
---

<footer class="footer">
  <div class="container">
    <div class="grid">
      <div class="brand-col">
        <a href="/" class="logo" aria-label="Gland homepage">
          <span class="logo-text">Gland</span>
          <span class="logo-badge">ALPHA</span>
        </a>
        <p class="tagline">Event-Driven Framework for Modern JavaScript</p>

        <div class="social-links">
          {socialLinks.map(link => (
            <a
              href={link.href}
              class="social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`Gland on ${link.name}`}
            >
              <span class="icon" aria-hidden="true">
                {link.icon === 'github' && (
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
