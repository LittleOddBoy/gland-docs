---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'Gland Framework', description = 'Event-Driven Framework for Modern JavaScript' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <style>
    :root {
      --background: #0a0a0a;
      --surface: #111;
      --surface-alt: #1a1a1a;
      --text: #e2e2e2;
      --text-muted: #aaa;
      --primary: #646cff;
      --primary-hover: #747bff;
      --border: #222;
    }

    body {
      background: var(--background);
      color: var(--text);
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.5;
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    a {
      color: var(--primary);
      text-decoration: none;
    }

    a:hover {
      color: var(--primary-hover);
    }

    h1, h2, h3, h4, h5, h6 {
      color: var(--text);
      font-weight: 600;
      line-height: 1.25;
    }

    code {
      font-family: 'Fira Code', monospace;
      background: var(--surface-alt);
      padding: 0.2em 0.4em;
      border-radius: 4px;
      font-size: 0.9em;
    }

    pre {
      background: var(--surface-alt);
      padding: 1rem;
      border-radius: 8px;
      overflow-x: auto;
    }

    pre code {
      background: transparent;
      padding: 0;
    }
  </style>
</head>
<body>
  <Header />

  <main>
    <slot />
  </main>

  <Footer />
</body>
</html>